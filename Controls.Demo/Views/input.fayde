<Page xmlns="http://schemas.wsick.com/fayde"
      xmlns:x="http://schemas.wsick.com/fayde/x"
      xmlns:controls="lib:Fayde.Controls"
      xmlns:viewmodels="ViewModels"
      Title="Input Controls Demo">
  <Page.Resources>
    
    <Style TargetType="Control">
      <Setter Property="Margin" Value="3"/>
    </Style>
  </Page.Resources>
  
    <StackPanel Margin="5">
      <TextBlock Text="TextBlock" />
      <TextBlock Text="This is a TextBlock"  />
      <TextBlock Text="This is a Multiline TextBlock" />

      <TextBlock Text="TextBox" />
      <TextBox Text="This is a TextBox" />

      <TextBox Text="This is a Readonly TextBox" IsReadOnly="True" />
      
      <TextBox Text="This is a Disabled TextBox" IsEnabled="False" />

      <TextBox Text="This is a TextBox with Multiline" AcceptsReturn="True" TextWrapping="Wrap" TextAlignment="Center" Height="100"/>

      <TextBox Text="This is a TextBox with Flow from Right to Left" Direction="RightToLeft" TextAlignment="Right" />

      <TextBlock Text="PasswordBox" />
      <PasswordBox Password="Password" />

      <TextBlock Text="NumericUpDown" />
      <StackPanel Orientation="Horizontal">
        <controls:NumericUpDown Margin="5" DecimalPlaces="0" Increment="1" />
        <controls:NumericUpDown Margin="5" DecimalPlaces="2" Increment="0.01" />
      </StackPanel>

     
      <TextBlock Text="DatePicker" />
      <TextBlock Text="Not Implemented yet" />

      
      <TextBlock Text="Button" />
      <Button Content="Button" />

      <TextBlock Text="CheckBox" />
      <CheckBox Content="Optoin1" />
      <CheckBox Content="Optoin2" />
      <CheckBox Content="Optoin3" />

      <TextBlock Text="RadioButtons" />
      <RadioButton GroupName="g" Content="Option1" />
      <RadioButton GroupName="g" Content="Option2" />
      <RadioButton GroupName="g" Content="Option3" />

    </StackPanel>
</Page>